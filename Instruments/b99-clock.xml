<?xml version="1.0"?>

<!--

-->

<PropertyList>
 <name>Digital Clock</name>
 <w-base>120</w-base>
 <h-base>120</h-base>


 <layers>

  <layer>
   <name>clock background</name>
   <texture>
    <path>Aircraft/beech99/Instruments/Textures/b99-faces-3.rgb</path>
    <x1>0.5</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>0.5</y2>
   </texture>
  <w>115</w>
  <h>115</h>
  </layer>

  <layer>
   <name>display</name>
   <type>text</type>
   <font>led</font>
   <point-size>6.5</point-size>
   <color>
    <red>0.0</red>
    <green>0.0</green>
    <blue>0.0</blue>
   </color>
   <chunks>
    <chunk>
     <type>text-value</type>
     <property>/instrumentation/clock/indicated-string</property>
    </chunk>
   </chunks>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>-31</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>-9</offset>
    </transformation>
   </transformations>
  </layer>
  
  <layer>
   <name>glare shield</name>
   <texture>
    <path>Aircraft/beech99/Instruments/Textures/b99-bezel-256.rgb</path>
    <x1>0.0</x1>
    <y1>0.0</y1>
    <x2>1.0</x2>
    <y2>1.0</y2>
   </texture>
  <w>120</w>
  <h>120</h>
   <transformations>
    <transformation>
     <type>x-shift</type>
     <offset>0</offset>
    </transformation>
    <transformation>
     <type>y-shift</type>
     <offset>0</offset>
    </transformation>
    </transformations>
  </layer>

 </layers>

</PropertyList>
